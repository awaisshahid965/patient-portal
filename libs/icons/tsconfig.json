{
    "compilerOptions": {
      "target": "esnext",                // Specify ECMAScript target version
      "module": "commonjs",              // Specify module code generation
      "outDir": "./dist",                // Set the output directory for compiled files
      "rootDir": "./src",                // Set the root directory of input files
      "strict": true,                    // Enable all strict type-checking options
      "esModuleInterop": true,           // Enable emit interoperability between CommonJS and ES Modules
      "skipLibCheck": true,              // Skip type checking of declaration files
      "forceConsistentCasingInFileNames": true, // Ensure consistent casing in file names
      "resolveJsonModule": true,         // Allow importing JSON modules
      // "baseUrl": ".",                    // Base directory for relative module imports
      "jsx": "preserve",
      "paths": {
        "*": ["./src/*"]                    // Define path mappings for modules
      }
    },
    "include": [
      "src/**/*.ts",                     // Include all TypeScript files in src
      "src/**/*.tsx",
    ],
    "exclude": [
      "node_modules",                    // Exclude node_modules directory
      "dist"                              // Exclude output directory
    ]
}
  